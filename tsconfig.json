{
	"compilerOptions": {
		"incremental": true,
		"target": "es2016",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"typeRoots": ["./node_modules/@types", "./src/types" ],
		"paths": {},
		"sourceMap": true
	},
	"files": [
		"./node_modules/@types/node/index.d.ts"
	],
	"include": [
		"src/**/*", "src/types/*"
	],
	"exclude": [
		"node_modules"
	]
}